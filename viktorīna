    if(answer == "Jānis Čakste"){
      cout << "pareizi!";
    }
    else{
      cout << "nav pareizi!";
    }
  }
if(random == 3){
    cout << "cik planētu ir Saules sistēmā?" << endl;
    cin >> answer;
    if(answer == "8"){
      cout << "pareizi!";
    }
    else{
      cout << "nav pareizi!";
    }
