#include <iostream>
#include <stdio.h>
#include <stdlib.h>
#include <time.h>
using namespace std;

int main() {
  srand(time(NULL));
  int random = rand() % 10;
  string answer;
  
  if(random == 0){
    cout << "cik būs 2 + 2?" << endl;
    cin >> answer;
    if(answer == "4"){
      cout << "pareizi!";
    }
    else{
      cout << "nav pareizi!";
    }
  }
  if(random == 1){
    cout << "kad sākās otrais pasaules karš?" << endl;
    cin >> answer;
    if(answer == "1939"){
      cout << "pareizi!";
    }
    else{
      cout << "nav pareizi!";
    }
  }
