    cin >> answer;
    if(answer == "8"){
      cout << "pareizi!";
    }
    else{
      cout << "nav pareizi!";
    }
  }
  if(random == 5){
    cout << "lielākā zvaigzne Saules sistēmā?" << endl;
    cin >> answer;
    if(answer == "saule"){
      cout << "pareizi!";
    }
    else{
      cout << "nav pareizi!";
    }
  }
  if(random == 6){
    cout << "cik būs 134 + 764?" << endl;
